@model ClinicaVeterinaria.Models.Visita

@{
    ViewBag.Title = "Create";
}
<div class="subtleBg px-3 py-4 mt-4 rounded-3 fs-5">
    <h2 class="display-4 me-4">Nuova visita </h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">


            <div class="form-group">
                @Html.LabelFor(model => model.Esame, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Esame, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Esame, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DescrizioneCura, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DescrizioneCura, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescrizioneCura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdAnimale_Fk, "IdAnimale_Fk", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*//TODO: disabilitare la modifica del campo*@
                    @Html.DropDownList("IdAnimale_Fk", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdAnimale_Fk, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Aggiungi" class="btn btn-success mt-2" />
                </div>
            </div>
        </div>
    }

    <div class="text-end">
        @Html.ActionLink("Torna a animali", "Index", "Animale", new {}, new {@class = "btn btn-warning mt-5"})
    </div>
</div>